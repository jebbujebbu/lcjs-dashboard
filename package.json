{
  "name": "lcjs-dashboard",
  "version": "0.1.0",
  "private": true,
  "main": "index.js",
  "workspaces": [
    "backend",
    "frontend"
  ],
  "dependencies": {
    "@lightningchart/lcjs": "^8.0.2",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "react-scripts": "5.0.1",
    "web-vitals": "^2.1.4"
  },
  "scripts": {
    "backend": "npm start -w backend",
    "frontend": "npm start -w frontend",
    "lcjs-server": "cd node_modules/@lightningchart/lcjs/dist/resources && npx http-server --cors -p 8080 --silent",
    "start": "concurrently \"npm run backend\" \"npm run frontend\" \"npm run lcjs-server\"",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "concurrently": "^9.2.1"
  }
}
